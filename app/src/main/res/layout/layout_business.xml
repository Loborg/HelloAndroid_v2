<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafbfc">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:scaleType="fitStart"
        android:src="@drawable/udacity_logo"/>

    <ImageView
        android:id="@+id/uda_img"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:scaleType="fitStart"
        android:src="@drawable/android_udacity" />

    <TextView
        android:id="@+id/uda_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uda_img"
        android:fontFamily="@font/agency_fb"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/hedline"
        android:textSize="40sp"
        android:textStyle="bold|italic"/>

    <Button
        android:id="@+id/web_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uda_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/agency_fb"
        android:text="@string/icon_web"
        android:textColor="@color/iconColor"
        android:textSize="25sp"
        android:onClick="showWebadress"/>

    <TextView
        android:id="@+id/webpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/web_button"
        android:layout_centerHorizontal="true"
        android:autoLink="web"
        android:fontFamily="@font/agency_fb"
        android:text="@string/web"
        android:textColor="@color/iconColor"
        android:textSize="20sp"
        android:visibility="invisible"
        android:textAllCaps="true"
        android:textIsSelectable="false"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_phone"
                android:textColor="@color/iconColor"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/uda_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agency_fb"
                android:gravity="bottom"
                android:padding="8dp"
                android:text="@string/tel"
                android:textColor="@color/textColor"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/city_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_city"
                android:textColor="@color/iconColor"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agency_fb"
                android:gravity="bottom"
                android:padding="8dp"
                android:text="@string/city"
                android:textColor="@color/textColor"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adr_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_adr"
                android:textColor="@color/iconColor"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agency_fb"
                android:padding="8dp"
                android:text="@string/street"
                android:textColor="@color/textColor"
                android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/zip_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_zip"
                android:textColor="@color/iconColor"
                android:textSize="25sp"/>

                <TextView
                    android:id="@+id/zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/agency_fb"
                    android:gravity="right"
                    android:padding="8dp"
                    android:text="@string/zip"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />
            </LinearLayout>

    </LinearLayout>
</RelativeLayout>
